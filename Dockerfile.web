FROM golang:1.25 AS builder

WORKDIR /app

ARG GOPROXY=https://proxy.golang.org,direct
ARG GOSUMDB=sum.golang.org
ENV GOPROXY=${GOPROXY}
ENV GOSUMDB=${GOSUMDB}

COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o /out/adweb ./web

FROM alpine:3.20

WORKDIR /app
RUN adduser -D -H -u 10001 appuser

COPY --from=builder /out/adweb /app/adweb

EXPOSE 8080
USER appuser

ENTRYPOINT ["/app/adweb"]
